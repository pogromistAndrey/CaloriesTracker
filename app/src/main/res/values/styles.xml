<resources>

    <!-- Base application theme. -->
    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="questions" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NoActionBarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NoActionBarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorButton</item>
        <item name="backgroundTint">@color/colorButton</item>
    </style>

    <style name="eat_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="eat" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="eat_units" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="FoodProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:progressDrawable">@drawable/food_progressbar_horizontal</item>
        <item name="android:minWidth">200dp</item>
    </style>



</resources>
